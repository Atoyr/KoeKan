<Window x:Class="Medoz.KoeKan.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Medoz.KoeKan"
        xmlns:components="clr-namespace:Medoz.KoeKan.Components"
        Title="Settings" Height="auto" Width="620">
    <!-- ã‚¹ã‚¿ã‚¤ãƒ«å®šç¾© -->
    <Window.Resources>
        <!-- ãƒ¡ãƒ‹ãƒ¥ãƒ¼ãƒªã‚¹ãƒˆã‚¢ã‚¤ãƒ†ãƒ ã®ã‚¹ã‚¿ã‚¤ãƒ« -->
        <Style x:Key="MenuListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <!-- é¸æŠžã‚¤ãƒ³ã‚¸ã‚±ãƒ¼ã‚¿ãƒ¼ï¼ˆå·¦å´ã®ãƒãƒ¼ï¼‰ -->
                            <Rectangle x:Name="SelectionIndicator"
                                       Width="3"
                                       HorizontalAlignment="Left"
                                       Fill="#0078D4"
                                       Visibility="Collapsed"/>

                            <!-- ãƒ¡ã‚¤ãƒ³ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ -->
                            <Border x:Name="ContentBorder"
                                    Background="{TemplateBinding Background}"
                                    Padding="16,12,16,12"
                                    Margin="3,0,0,0">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- ãƒ›ãƒãƒ¼çŠ¶æ…‹ -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ContentBorder" Property="Background" Value="#F3F2F1"/>
                            </Trigger>

                            <!-- é¸æŠžçŠ¶æ…‹ -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ContentBorder" Property="Background" Value="#E6F3FF"/>
                                <Setter TargetName="SelectionIndicator" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <!-- é¸æŠžã‹ã¤ãƒ›ãƒãƒ¼çŠ¶æ…‹ -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="ContentBorder" Property="Background" Value="#D1E7F5"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- ã‚µã‚¤ãƒ‰ãƒ¡ãƒ‹ãƒ¥ãƒ¼åˆ— -->
            <ColumnDefinition Width="160"/>
            <!-- ãƒ¡ã‚¤ãƒ³ã‚³ãƒ³ãƒ†ãƒ³ãƒ„åˆ— -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ã‚µã‚¤ãƒ‰ãƒ¡ãƒ‹ãƒ¥ãƒ¼ -->
        <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E1E3E6" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ãƒ¡ãƒ‹ãƒ¥ãƒ¼ãƒªã‚¹ãƒˆ -->
                <ListBox Grid.Row="0" x:Name="MenuListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         SelectionChanged="MenuListBox_SelectionChanged">

                    <ListBoxItem Tag="General" Style="{StaticResource MenuListItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- ã‚¢ã‚¤ã‚³ãƒ³ -->
                            <Border Grid.Column="0" Width="20" Height="20" Background="#0078D4"
                                    CornerRadius="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ " FontSize="12" HorizontalAlignment="Center"
                                           VerticalAlignment="Center" Foreground="White"/>
                            </Border>

                            <!-- ãƒ†ã‚­ã‚¹ãƒˆ -->
                            <TextBlock Grid.Column="1" Text="å…¨èˆ¬"
                                       VerticalAlignment="Center" FontSize="14"
                                       Foreground="#323130" Margin="8,0,0,0"/>
                        </Grid>
                    </ListBoxItem>

                </ListBox>
            </Grid>
        </Border>
        <!-- ãƒ¡ã‚¤ãƒ³ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚¨ãƒªã‚¢ -->
        <Border Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ContentControl
                    x:Name="MainContent"
                    Grid.Row="0"/>
                <!--ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã®ä¿å­˜ãƒœã‚¿ãƒ³ã¯å…¨ç”»é¢å…±é€š-->
                <Grid
                    Grid.Row="1"
                    Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" MinWidth="64"/>
                        <ColumnDefinition Width="Auto" MinWidth="64"/>
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="1"
                        Style="{StaticResource PrimaryButton}"
                        Content="OK"
                        Width="124"
                        Margin="16"
                        Command="{Binding SubmitCommand}" />
                    <Button
                        Grid.Column="2"
                        Style="{StaticResource SecondaryButton}"
                        Content="Cancel"
                        Width="124"
                        Margin="16"
                        Command="{Binding CloseCommand}" />
                </Grid>
            </Grid>
        </Border>

    </Grid>
</Window>
