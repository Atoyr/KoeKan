<Window x:Class="Medoz.KoeKan.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="auto" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Settings" FontSize="16" FontWeight="Bold" Margin="10"/>
            <TextBlock Text="Username:" Margin="10,10,10,0"/>
            <TextBox x:Name="UsernameTextBox" Margin="10"/>
            <TextBlock Text="Icon file Path:" Margin="10,10,10,0"/>
            <TextBox x:Name="IconFilePathTextBox" Margin="10"/>
            <TextBlock Text="Width:" Margin="10,10,10,0"/>
            <TextBox x:Name="WidthTextBox" Margin="10"/>
            <TextBlock Text="Height:" Margin="10,10,10,0"/>
            <TextBox x:Name="HeightTextBox" Margin="10"/>
            <TextBlock Text="Mod Key:" Margin="10,10,10,0"/>
            <TextBlock Text="Key:" Margin="10,10,10,0"/>
            <Button Content="OK" Width="100" Margin="10" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
