<UserControl x:Class="Medoz.MessageTransporter.Components.ChatMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Margin="5" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- <Image Grid.Column="0" Source="{Binding IconSource}" Width="40" Height="40" Margin="5"/> -->

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding Username}" FontWeight="Bold"/>
            <TextBlock Grid.Column="1" Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" HorizontalAlignment="Right"/>

            <TextBlock Grid.Row="1" Text="{Binding Channel}" FontStyle="Italic" Opacity="0.7"/>
            <TextBlock Grid.Row="2" Text="{Binding Message}" TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</UserControl>
