<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="Blue50">#EFF6FF</Color>
    <Color x:Key="Blue100">#DBEAFE</Color>
    <Color x:Key="Blue200">#BFDBFE</Color>
    <Color x:Key="Blue300">#93C5FD</Color>
    <Color x:Key="Blue400">#60A5FA</Color>
    <Color x:Key="Blue500">#3B82F6</Color>
    <Color x:Key="Blue600">#2563EB</Color>
    <Color x:Key="Blue700">#1D4ED8</Color>
    <Color x:Key="Blue800">#1E40AF</Color>
    <Color x:Key="Blue900">#1E3A8A</Color>

    <!-- Gray Colors -->
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>

    <!-- Success Colors -->
    <Color x:Key="Green50">#ECFDF5</Color>
    <Color x:Key="Green500">#10B981</Color>
    <Color x:Key="Green600">#059669</Color>
    <Color x:Key="Green700">#047857</Color>

    <!-- Danger Colors -->
    <Color x:Key="Red50">#FEF2F2</Color>
    <Color x:Key="Red500">#EF4444</Color>
    <Color x:Key="Red600">#DC2626</Color>
    <Color x:Key="Red700">#B91C1C</Color>

    <!-- Warning Colors -->
    <Color x:Key="Yellow50">#FFFBEB</Color>
    <Color x:Key="Yellow500">#F59E0B</Color>
    <Color x:Key="Yellow600">#D97706</Color>

    <!-- SolidColorBrush リソース -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Blue500}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource Blue600}"/>
    <SolidColorBrush x:Key="PrimaryActiveBrush" Color="{StaticResource Blue700}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="SecondaryHoverBrush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="SecondaryActiveBrush" Color="{StaticResource Gray700}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Green500}"/>
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="{StaticResource Green600}"/>
    <SolidColorBrush x:Key="SuccessActiveBrush" Color="{StaticResource Green700}"/>

    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Red500}"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="{StaticResource Red600}"/>
    <SolidColorBrush x:Key="DangerActiveBrush" Color="{StaticResource Red700}"/>

    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Yellow500}"/>
    <SolidColorBrush x:Key="WarningHoverBrush" Color="{StaticResource Yellow600}"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="White"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource Gray500}"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource Blue50}"/>
    <SolidColorBrush x:Key="BackgroundMutedBrush" Color="{StaticResource Gray100}"/>

</ResourceDictionary>